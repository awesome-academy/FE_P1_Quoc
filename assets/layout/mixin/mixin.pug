//- Address page
//- address form
mixin address-form(id,fname,lname,cty,add,city,qt,zip,phone)
  form(id=`address__form${id}` action="#" method="get").address__form
    label(for="fname")
      span Tên
      input(type="text" name="fname" value=`${fname}`)
    label(for="lname")
      span Họ & tên đệm
      input(type="text" name="lname" value=`${lname}`)
    label(for="cty")
      span Công ty
      input(type="text" name="cty" value=`${cty}`)
    label(for="add")
      span Địa chỉ
      input(type="text" name="address" value=`${add}`)
    label(for="city")
      span Thành phố
      input(type="text", name="city" value=`${city}`)
    label(for="qt")
      span Quốc tịch
      input(type="text", name="qt" value=`${qt}`)
    label(for="zip")
      span Postal/Zip Code
      input(type="text", name="zip" value=`${zip}`)
    label(for="phone")
      span Phone
      input(type="tel", name="phone" value=`${phone}`)
mixin address-btn(id,submit,del)
  .address__btn
    label(for="check")
      input(type="checkbox", name="check" form=`address__form${id}` checked)
      span Đặt làm địa chỉ mặc định?
    div
      button(type="submit" form=`address__form${id}`).btn.address__btn--submit= submit
      button(type="submit" form=`address__form${id}`).btn.address__btn--del= del
    

