//- ----------Mixin cho layout chung----------
//- Title
mixin titlePage(page)
  title= page
//- Header user
mixin header-user(val)
  li.header__user--items
    a(href="#").header__user--link= val
  span -
//- Footer
mixin footer-menu-header(h)
  h4.footer__menu--header= h
mixin footer-menu-list(val)
  ul.footer__menu--list
    li.footer__menu--items
      a.footer__menu--link= val
mixin footer-menu-media(media)
  a(href="#")
    if media == "rss"
      i(class=`fas fa-${media}`)
    else
      i(class=`fab fa-${media}`)
mixin footer-payment(val)
  a(href="#")
    i(class=`fab fa-cc-${val}`)
//- Menu
mixin menu-nav(nav)
  li.menu__nav--items
    a(href="#").menu__nav--link= nav
    if nav == "RƯỢU VANG ĐỎ"
      .menu__sub
        .menu__sub--inner
          +menu-sub-head("RƯỢU NGOẠI",["Rượu Chivas","Hàng độc - Rượu độc đáo","Johnnie Walker","Rượu Whisky","Rượu Remy Martin","Rượu Glenmorangie"])
          +menu-sub-head("RƯỢU VANG",["Rượu Chivas","Hàng độc - Rượu độc đáo","Johnnie Walker","Rượu Whisky","Rượu Remy Martin","Rượu Glenmorangie"])
          +menu-sub-head("RƯỢU NGOẠI",["Rượu Chivas","Hàng độc - Rượu độc đáo","Johnnie Walker","Rượu Whisky","Rượu Remy Martin","Rượu Glenmorangie"])
          .menu__sub--img
            img(src="assets/images/menu/sub.png" alt="Sub menu")
mixin menu-sub-head(h,sub)
  .menu__sub--content
    h4.menu__sub--header= h
    ul.menu__sub--list
      each val in sub
        +menu-sub-list(val)
mixin menu-sub-list(sub)
  li.menu__sub--items
    a(href="#").menu__sub--link= sub
//- Section header
mixin section-center(h)
  .section__center--title
    h1.section__center--header= h
    img(src="assets/images/decor/1.png" alt="icon").section__center--icon
mixin section-arrow(h)
  .section__arrow--title
    h1.section__arrow--header= h
    img(src="assets/images/decor/2.png" alt="icon").section__arrow--icon
mixin breadcrumb(menu,span,current)
  .breadcrumb
    .container.breadcrumb__inner
      a(href="index.html") Trang chủ
      span /
      a(href="#")= menu
      span= span
      p= current
