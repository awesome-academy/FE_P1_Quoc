//- Home page
//- Header
mixin home-header-user(val)
  li.home-header__user--items
    a(href="#").home-header__user--link= val
  span -
//- New products and Top sales
mixin home-header-new(color, tag, img, h, price, saleoff)
  aside.home-new__items
    .home-new__top
      p(class=`home-new__tag--${color}`)= tag
      img(src=`assets/images/${img}.png`, alt="wine").home-new__img
      .home-new__label
        a(href="#")
          i.fas.fa-heart
          span Yêu thích
        a(href="#")
          i.fas.fa-signal
          span So sánh
        a(href="#")  
          i.fas.fa-compress-alt
    .home-new__bot
      a(href="#").home-new__wine
        h4= h
      p.home-new__price.price= price
        span đ
      span -
      p.price= saleoff
        span đ
      .home-new__btn
        a.btn ADD TO CART
//- Gallery
mixin home-gallery(img)
  a(href="#").home-gallery__link
    p.home-gallery__year 1987
    p.home-gallery__text RƯỢU
    img(src=`assets/images/gallery/${img}.png` alt="image").home-galley__img
    .home-gallery__top
    .home-gallery__left
    .home-gallery__bottom
    .home-gallery__right
//- Blog & News
mixin home-blog(img,h,user,date,cmt,p)
  aside.home-blog__post
    a(href="#").home-blog__link
      .home-blog__img
        img(src=`assets/images/blog/${img}.png`, alt="blog")
        span
        i.fas.fa-link
      h4.home-blog__header= h
    div.home-blog__des
      |Đăng bởi 
      a(href="#")= user
      |  | 
      a(href="#")= date
      |  | 
      a(href="#")= cmt
        |  bình luận
    p.home-blog__content= p
      a(href="#") Read more

//- Product detail page
//- Images list
mixin pdDetail-detail-imglist(img)
  a(href="#")
    img(src=`assets/images/product-detail/${img}.png` alt="")
mixin pdDetail-tab-content(id,content)
  if id == "feature"
    input(type="radio" id=`${id}` name="tab" checked)
    .pdDetail-tab__content= content
  else
    input(type="radio" id=`${id}` name="tab")
    .pdDetail-tab__content= content

//- Products
mixin products-list(a,span)
  li
    a(href="#")= a
      span= span
//- Products row
mixin products-row(img,h,price,p)
  aside.products__row--items
    img(src=`assets/images/products/${img}.png` alt="wine")
    .products__row--content
      h3= h
      p.price= price
        span đ
      p.products__row--text= p
      .products__row--btn
        a.btn ADD TO CART
        .products__row--btn-group
          a(href="#")
            i.fas.fa-heart
            span Yêu thích
          a(href="#")
            i.fas.fa-signal
            span So sánh

//- Cart
//- table
mixin cart-table(img,name,price,no)
  .cart__table-row
    div 
      img(src=`assets/images/cart/${img}.jpg` alt="wine")
      h5= name
    div
      h5= name
    div
      p.price= `${price}.000`
        span đ
    div
      h5= no
    div
      p.price= `${(price*no)}.000`
        span đ
    div
      a(href="#")
        i.fas.fa-trash-alt

